lo.comp.errors{
  import lo.comp.location.
  import lo.

  public
  reportError:(string,location){}.
  reportError(Msg,Lc) :-
    _logmsg("Error @ $(Lc)"),
    _logmsg(Msg).

  public
  reportMsg:(string,location){}.
  reportMsg(Msg,Lc) :-
    _logmsg("Info @ $(Lc)"),
    _logmsg(Msg).

  public
  logMsg:(string){}.
  logMsg(Msg) :- _logmsg(Msg).
}
innerClass{
  -- Test inner classes
  import lo.arith.
  import lo.thing.

  basic <~ {
    id:integer.
  }.

  better <~ basic.
  better <~ {
    inner:basic.
  }.

  outer:(integer)<=>better.
  outer(Id){
    inner:basic.
    inner{
      id = Id.
    }.

    id = inner.id.
  }.

  O:better.
  O = outer(47).

  I:basic.
  I = O.inner.

  assert I.id = 47.
}
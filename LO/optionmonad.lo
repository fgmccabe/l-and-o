lo.option {
  import lo.
  import lo.monad.

  public implementation monad[option->>()] => {
    none >>= _ => none.
    some(X) >>= F => F(X).

    return X => some(X).

    raise () => none.
  }

  public implementation execution[option->>()] => {
    _perform(some(X)) => X.
    _handle(some(X),_) => some(X).
    _handle(none,E) => E(()).
  }

}

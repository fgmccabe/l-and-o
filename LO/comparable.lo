lo.comparable {

  -- Define what it means for two entities to be comparable

  import lo.thing.

  comp <~ {
    lt: (this+){}.
    ge: (this+){}.
  }

  (<):all t<~comp ~~ (t+,t+){}.
  X < Y :- X.lt(Y).

  (=<):all t<~comp ~~ (t+,t+){}.
  X =< Y :- Y.ge(X).

  (>):all t<~comp ~~ (t+,t+){}.
  X > Y :- Y.lt(X).

  (>=):all t<~comp ~~ (t+,t+){}.
  X >= Y :- X.ge(Y).
}